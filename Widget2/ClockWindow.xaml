<src:WidgetWindow x:Class="NotRainmeter.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:NotRainmeter"
        mc:Ignorable="d"
        Title="ClockWindow" Height="190" Width="360" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent" 
        WindowStyle="None" Loaded="Window_Loaded" >
    <Border CornerRadius="15" BorderThickness="5">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.6" />
        </Border.Background>
        
        <StackPanel>
            <Label x:Name="timeLabel" Content="00:00" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="80" Foreground="White"/>
            <Label x:Name="dateLabel" Content="1 January 1970" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Foreground="White"
                   Padding="0,0,0,20"/>
            <Grid/>
        </StackPanel>
    </Border>
</src:WidgetWindow>
